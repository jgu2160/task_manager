<h1>All Tasks</h1>
<div id="tasks">
<% @tasks.each do |task| %>
<div id="<%= task[:id] %>">
  <h3><%= task[:id] %>: <a href="/tasks/<%= task[:id] %>"><%= task[:title] %></a></h3>
  <a class="btn btn-warning" href="/tasks/<%= task[:id] %>/edit">Edit</a>
  <form action="/tasks/<%= task[:id] %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input id="delete" class="btn btn-danger" type="submit" value="Delete"/>
  </form>
<% end %>
</div>
</div>
